@model Cost

@{
    ViewData["Title"] = "Gestion des frais";
}

<div class="row">
    <div class="col-md-4 my-4 mx-auto">

        <partial name="_StatusMessage" model='TempData["StatusMessage"]' />

        <div class="card shadow">
            <div class="card-body">
                <h5 class="card-title"><strong>@ViewData["Title"]</strong></h5>
                <hr />
                <form asp-action="Update" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Contribution" class="required"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Contribution" class="form-control" required>
                            <div class="input-group-append">
                                <span class="input-group-text">XOF</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pension" class="required"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Pension" class="form-control" required>
                            <div class="input-group-append">
                                <span class="input-group-text">XOF</span>
                            </div>
                        </div>
                    </div>
                    <a asp-action="Index" class="btn btn-secondary">Retour</a>
                    <button type="submit" class="btn btn-success">Enregistrer</button>
                </form>
            </div>
        </div>
    </div>
</div>