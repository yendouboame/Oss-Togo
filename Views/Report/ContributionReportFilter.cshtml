@model ContributionReportViewModel

@{
    ViewData["Title"] = "Etat des cotisations";
}

<style>
    .form-group, .form-group .dropdown-item, legend {
        font-size: 14px;
    }

    legend {
        font-size: 14px;
        font-weight: bold;
        color: #6c757d;
        text-transform: uppercase;
    }
</style>

<div class="row">
    <div class="col-md-4 my-4 mx-auto">
        <div class="card shadow mx-auto">
            <div class="card-body">
                <h5 class="card-title"><strong>@ViewData["Title"]</strong></h5>
                <hr />
                <form asp-action="ContributionReport" method="post">
                    <fieldset class="form-group border pt-1 px-3 pb-3">
                        <legend class="w-auto px-2">Date de la cotisation</legend>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group m-0">
                                    <label>Entre le</label>
                                    <input type="date" class="form-control-sm" asp-for="StartDate">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group m-0">
                                    <label>Et le</label>
                                    <input type="date" class="form-control-sm" asp-for="EndDate">
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="form-group border pt-1 px-3 pb-3">
                        <legend class="w-auto px-2">Groupé par</legend>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group m-0">
                                    <select class="form-control-sm select-picker" asp-for="GroupBy" title="-- Veuillez sélectionner --">
                                        <option value="@GroupBy.Priest">Prêtres</option>
                                        <option value="@GroupBy.Diocese">Diocèses</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Accueil</a>
                    <button type="submit" class="btn btn-primary">Suivant</button>
                </form>
            </div>
        </div>
    </div>
</div>