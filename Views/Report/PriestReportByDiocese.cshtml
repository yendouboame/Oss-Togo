@model IEnumerable<Diocese>

@{
    ViewData["Title"] = "Etat des prêtres par diocèse";
    Layout = "_ReportLayout";
}

<h4 class="text-center text-uppercase my-3"><strong>@ViewData["Title"]</strong></h4>

<table class="table table-bordered text-center">
    <thead class="thead-light">
        <tr>
            <th>#</th>
            <th class="text-left">Nom et prénom(s)</th>
            <th>Date de naissance</th>
            <th>Date d'ordination</th>
        </tr>
    </thead>
    @foreach (var diocese in Model)
    {
        int i = 1;
        <thead class="thead-dark">
            <tr>
                <th colspan="5">@diocese.Name</th>
            </tr>
        </thead>

        <tbody>
            @if (diocese.Priests.Count > 0)
            {
                @foreach (var priest in diocese.Priests)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td class="text-left">@priest.FullName</td>
                        <td>@priest.DateOfBirth.ToShortDateString()</td>
                        <td>@priest.OrdinationDate.ToShortDateString()</td>
                    </tr>
                }
            }
            else
            {
                <tr role="group" class="bg-light text-center">
                    <td colspan="4">Aucun prêtre enregistré pour ce diocèse</td>
                </tr>
            }
        </tbody>
    }
