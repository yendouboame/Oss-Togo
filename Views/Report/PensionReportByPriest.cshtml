@model IEnumerable<Pension>

@{
    ViewData["Title"] = "Etat des allocations par prêtre";
    Layout = "_ReportLayout";

    int i = 1;
}

<h2 class="text-center mb-4 border-bottom"><strong>@ViewData["Title"]</strong></h2>

<table class="table table-bordered text-center">
    <thead class="thead-light">
        <tr>
            <th>#</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.Priest)</th>
            <th>@Html.DisplayNameFor(model => model.Amount)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pension in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@pension.Date.ToShortDateString()</td>
                <td>@pension.Priest?.FullName</td>
                <td>@FormatNumberWithSpaces(pension.Amount) XOF</td>
            </tr>
        }
        <tr>
            <td colspan="3"><strong>TOTAL</strong></td>
            <td>@FormatNumberWithSpaces(Model.Sum(m => m.Amount)) XOF</td>
        </tr>
    </tbody>
</table>