                </div>
                <table id="entitiesTable" class="table table-sm table-hover table-bordered mt-4">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Date)</th>
                            <th>@Html.DisplayNameFor(model => model.Priest)</th>
                            <th>@Html.DisplayNameFor(model => model.Ammount)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contribution in Model)
                        {
                            <tr>
                                <td>@contribution.Date.ToString("dd MMM yyyy")</td>
                                <td>@contribution.Priest?.FullName</td>
                                <td>@contribution.Ammount</td>
                            </tr>
