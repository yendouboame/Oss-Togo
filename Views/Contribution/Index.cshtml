                <h5 class="card-title"><strong>@ViewData["Title"]</strong></h5>
                <hr />
                <div class="toolbar">
                    <div class="row">
                        <div class="col-auto mr-auto">
                            <a asp-action="Add" class="btn btn-sm btn-success">
                                <i class="fa fa-plus-circle" aria-hidden="true"></i> Nouveau
                            </a>
                        </div>
                        <div class="col-auto">
                            <button id="btn-filter-toggle" class="btn btn-sm btn-light btn-outline-dark" title="Trier la liste">
                                <i class="fa fa-filter" aria-hidden="true"></i>
                            </button>
                            <a asp-action="Index" asp-controller="Priest" class="btn btn-sm btn-light btn-outline-dark" title="Actualiser">
                                <i class="fa fa-refresh" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
