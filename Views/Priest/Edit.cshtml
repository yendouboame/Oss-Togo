@model Priest

@{
    ViewData["Title"] = "Modifier";
}

<h2 class="page-title">@ViewData["Title"]</h2>

<partial name="_StatusMessage" model='TempData["StatusMessage"]' />

<div class="row">
    <div class="col-md-4 my-4">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfBirth"></label>
                        <input type="date" asp-for="DateOfBirth" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrdinationDate"></label>
                        <input type="date" asp-for="OrdinationDate" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="Diocese"></label>
                        <select asp-for="DioceseId" class="form-control" asp-items="ViewBag.Dioceses" required></select>
                    </div>
                    <button type="submit" class="btn btn-primary">Modifier</button>
                </form>
            </div>
        </div>
    </div>
</div>