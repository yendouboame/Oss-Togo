@model Priest

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input type="date" asp-for="DateOfBirth" value="" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="OrdinationDate"></label>
        <input type="date" asp-for="OrdinationDate" value="" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="Diocese"></label>
        <select asp-for="DioceseId" class="form-control" asp-items="ViewBag.Dioceses" required></select>
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
</form>
