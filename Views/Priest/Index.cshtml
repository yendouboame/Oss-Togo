</div>

<div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Nouveau Prêtre</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <partial name="_CreatePartial" model="new Priest()">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body pb-2">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title">Confirmation de suppression</h5>
                <hr class="mt-2" />
                Êtes-vous sûr(e) de vouloir supprimer ces informations ?
                <hr class="mb-2" />
                <form asp-action="Delete" method="post" class="text-right">
                    <input type="hidden" id="priestId" name="priestId" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                    <button type="submit" class="btn btn-danger">Oui</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#entitiesTable tbody').on('click', '.btn-delete', function () {
            var priestId = $(this).data('priest-id');
            $("#confirm-delete").find(".modal-body #priestId").val(priestId);
        });
    </script>
}