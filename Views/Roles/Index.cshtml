@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Liste de tous les rôles";
}

<partial name="_StatusMessage" model='TempData["StatusMessage"]' />

<div class="row">
    <div class="col-md-12 my-4">
        <div class="card shadow">
            <div class="card-body">
                <h5 class="card-title"><strong>@ViewData["Title"]</strong></h5>
                <hr />
                <div class="toolbar mb-4">
                    <div class="row">
                        <div class="col-auto mr-auto">
                            <form method="post" asp-action="AddRole">
                                <div class="input-group">
                                    <input name="roleName" class="form-control w-25">
                                    <span class="input-group-btn">
                                        <button class="btn btn-success">Ajouter</button>
                                    </span>
                                </div>
                            </form>
                        </div>
                        <div class="col-auto">
                            <a asp-action="Index" asp-controller="Roles" class="btn btn-sm btn-light btn-outline-dark" title="Actualiser">
                                <i class="fa fa-refresh" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <table id="customDataTable" class="table table-sm table-bordered table-hover text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nom de rôle</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td class="text-right">
                                    <div class="dropdown">
                                        <button class="btn btn-sm dropdown-toggle" type="button" id="actions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="text-muted sr-only">Action</span>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="actions" style="line-height: 2;">
                                            <a class="dropdown-item btn-edit" href="#">Modifier</a>
                                            <a class="dropdown-item btn-delete" href="#">Supprimer</a>
                                            <a class="dropdown-item" asp-controller="Users" asp-action="Roles" asp-route-userId="@role.Id">
                                                Gérer les permissions
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>