<div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Nouveau diocèse</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <partial name="_CreatePartial" model="new Diocese()" />
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Modifier le diocèse</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" method="post">
                    <div class="form-group">
                        <label class="required">Nom du diocèse</label>
                        <input id="Name" name="Name" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Modifier</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-edit').click(function (e) {
                e.preventDefault();

                var dioceseId = $(this).data('diocese-id');

                $.ajax({
                    url: "@Url.Action("Details", "Diocese")",
                    type: 'GET',
                    data: { "dioceseId" : dioceseId },
                    success: function (result) {
                        $('#edit #Name').val(result.name);
                        $('#edit').modal('show');
                    },
                    error: function (xhr, status, error) {
                        console.log(error);
                        // Gérer les erreurs si nécessaire
                    }
                });
            });
        });
    </script>
}