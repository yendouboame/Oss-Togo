                <hr />
                <table id="entitiesTable" class="table table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.NumberOfPriests)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var diocese in Model)
                        {
                            <tr>
                                <td>@diocese.Name</td>
                                <td>@diocese.NumberOfPriests</td>
                                <td class="text-right">
                                    <div class="dropdown">
                                        <button class="btn btn-sm dropdown-toggle" type="button" id="actions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="text-muted sr-only">Action</span>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="actions" style="line-height: 2;">
                                            <a class="dropdown-item btn-edit" href="#" data-toggle="modal" data-target="#edit" data-diocese-id="@diocese.Id">Modifier</a>
