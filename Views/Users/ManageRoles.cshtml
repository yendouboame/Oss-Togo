@model UserRolesViewModel

@{
    ViewData["Title"] = "Gestion des rôles";
}

<div class="row">
    <div class="col-md-4 my-4 mx-auto">

        <partial name="_StatusMessage" model='TempData["StatusMessage"]' />

        <div class="card shadow">
            <div class="card-body">
                <h5 class="card-title"><strong>@ViewData["Title"]</strong></h5>
                <small>Ajouter / Retirer un rôle à l'utilisateur @Model.UserFullName</small>
                <hr />

                <form asp-action="UpdateRoles" method="post">
                    <input type="hidden" asp-for="UserId" />
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model.Roles[i].DisplayValue" />
                            <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                            <label class="form-check-label pb-2" asp-for="@Model.Roles[i].IsSelected">
                                @Model.Roles[i].DisplayValue
                            </label>
                        </div>
                    }
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success">Enregistrer</button>
                        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>