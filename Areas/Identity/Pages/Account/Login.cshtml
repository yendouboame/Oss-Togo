@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
    Layout = "_AuthnLayout";
}

<div class="card shadow w-25 mx-auto mt-5">
    <div class="card-body">
        <h5><strong class="card-title">@ViewData["Title"]</strong></h5>
        <hr />
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <form id="account" method="post">
            <div class="form-group">
                <label asp-for="Input.UserNameOrEmail"></label>
                <input asp-for="Input.UserNameOrEmail" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" checked />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Connexion</button>
        </form>
    </div>
</div>